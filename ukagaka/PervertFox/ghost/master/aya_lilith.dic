	void FCHARSET(1)
	
	void FOPEN(_filename,'w')
	
	_q = '"'

	_gt = GETTIME()
	_s = STRFORM('$04d/$02d/$02d $02d:$02d:$02d',_gt[0],_gt[1],_gt[2],_gt[4],_gt[5],_gt[6])
	
