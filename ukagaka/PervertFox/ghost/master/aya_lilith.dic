		_fname = "マウスジェスチャー%(_postfix)%(reference[0])%(reference[4])単発%(_name)"
		_fname = OnGhostEventTranslate.AYL(_fname)
		if ISFUNC(_fname) {
			EVAL(_fname + '(_garray)')
			MouseEventTimeReset
			return
		}
		
		_fname = "マウスジェスチャー%(_postfix)%(reference[0])%(reference[4])"
		_fname = OnGhostEventTranslate.AYL(_fname)
		if ISFUNC(_fname) {
			EVAL(_fname + '(_garray)')
			MouseEventTimeReset
			return
		}
		
		_fname = "マウスジェスチャー%(_postfix)%(reference[0])%(JOIN(_garray,'・'))"
		_fname = OnGhostEventTranslate.AYL(_fname)
		if ISFUNC(_fname) {
			EVAL(_fname)
			MouseEventTimeReset
			return
		}
		
		_fname = "マウスジェスチャー%(_postfix)%(reference[0])単発%(_name)"
		_fname = OnGhostEventTranslate.AYL(_fname)
		if ISFUNC(_fname) {
			EVAL(_fname)
			MouseEventTimeReset
			return
		}
		
		_fname = "マウスジェスチャー%(_postfix)%(reference[0])"
		_fname = OnGhostEventTranslate.AYL(_fname)
		if ISFUNC(_fname) {
			EVAL(_fname + '(_garray)')
			MouseEventTimeReset
			return
		}
		
		if TOINT(EVAL('マウスジェスチャーにホイール反応を流用')) {
			if '上' _in_ _name || '下' _in_ _name {
				if '上' _in_ _name {
					_name = '上'
				}
				elseif '下' _in_ _name {
					_name = '下'
