	void FWRITE(_filename,'</tbody></table>')
	void FCLOSE(_filename)
	
	ERASEVAR('ayl_gn_list')
	ERASEVAR('ayl_gn_from')
	ERASEVAR('ayl_sakuraname_list')
	ERASEVAR('ayl_crafturl_list')
	
