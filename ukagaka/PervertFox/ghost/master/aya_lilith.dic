				}
			}
		}
		
		_fname = "マウスジェスチャー%(_postfix)%(reference[0])%(reference[4])%(JOIN(_garray,'・'))"
		_fname = OnGhostEventTranslate.AYL(_fname)
		if ISFUNC(_fname) {
