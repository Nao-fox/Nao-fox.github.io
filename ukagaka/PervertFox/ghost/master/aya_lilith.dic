AYL_DateInit
{
	if GETTYPE(SHIORI3FW.UserBirthday) != 3 {
		今日はユーザー誕生日 = 0
		return
	}
	if STRLEN(SHIORI3FW.UserBirthday) == 0 {
		今日はユーザー誕生日 = 0
		return
	}
	
	_a1 = GETTIME()
	_d1 = JOIN(_a1[1],_a1[2],',')
	
	_a2 = SPLIT(SHIORI3FW.UserBirthday,',')
	_d2 = JOIN(TOINT(_a2[1]),TOINT(_a2[2]),',')
	
	if _d1 == _d2 {
		今日はユーザー誕生日 = 1
	}
	else {
		今日はユーザー誕生日 = 0
	}
}

