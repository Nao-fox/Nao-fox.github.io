	void FWRITE(_filename,"<table class=%(_q)ghostchange%(_q)><tbody><tr><th>ゴースト名</th><th>状態</th></tr>")
	
	_n = ARRAYSIZE(ayl_gn_list)
	for _i = 0 ; _i < _n ; _i++ {
